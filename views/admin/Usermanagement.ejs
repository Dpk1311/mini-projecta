<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="dist/output.css">
    <script src="https://cdn.tailwindcss.com"></script>
    <title>User Management</title>
</head>
<body>
    <%- include('adminpartials/navbar') %>

    <section class="container mx-auto mt-5 px-4">
        <div class="admin-home-container">
            <header>
                <h1 class="text-2xl font-bold">Admin Panel</h1>
                <form action="/usersearch" method="get" class="mt-4">
                    <div class="flex">
                        <input type="text" name="searchQuery" placeholder="Search users"
                            class="p-2 border border-gray-300 rounded-l-lg w-50">
                        <button type="submit"
                            class="bg-gray-900 text-white px-4 py-2 rounded-r-lg">Search</button>
                    </div>
                </form>
            </header>
            <div class="mt-6">
                <div class="user-list">
                    <h2 class="text-xl font-semibold">User List</h2>
                    <ul class="mt-4 space-y-4">
                        <!-- Sample user data (replace with dynamic data) -->
                        <% check.forEach((user)=> { %>
                            <li class="bg-white shadow-md p-4 rounded-lg">
                                <div class="flex justify-between items-center">
                                    <div>
                                        <span class="font-semibold">Name:</span>
                                        <span class="ml-2">
                                            <%= user.name %>
                                        </span>
                                    </div>
                                    <div>
                                        <span class="font-semibold">Email:</span>
                                        <span class="ml-2">
                                            <%= user.email %>
                                        </span>
                                    </div>
                                    <div class="mt-2">
                                        <% if (user.block) { %>
                                            <a href="/userUnblock/<%= user._id %>"
                                                class="block-button bg-red-500 text-white py-1 px-2 rounded-lg inline-block mr-2">Unblock</a>
                                            <% } else { %>
                                                <a href="/userblock/<%= user._id %>"
                                                    class="block-button bg-green-500 text-white py-1 px-2 rounded-lg inline-block mr-2">Block</a>
                                                <% } %>
                                    </div>
                                </div>
                            </li>
                            <% }); %>
                    </ul>
                </div>
            </div>
        </div>
    </section>


</body>
</html>