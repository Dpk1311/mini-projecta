<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.16/dist/tailwind.min.css">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Wishlist</title>
</head>
<body>
    <%- include('partials/navbar.ejs',user) %>
    <div class="mt-3">
      <h1 class="ml-3 text-3xl lg:text-4xl tracking-tight font-semibold leading-8 lg:leading-9 text-gray-800 dark:text-white dark:text-white">Wishlist</h1>
    </div>
    <% wishlistdata.products.forEach(item => { %>
      <%# console.log('itemejs',item); %>
    <div class="mt-4 ml-2 w-full mb-8 overflow-hidden rounded-lg shadow-md">
      <div class="w-full overflow-x-auto">
        <div class="flex flex-wrap">
          <div class="w-full">
            <div class="flex items-center text-sm">
              <div class="relative w-32 h-48 mr-3 md:block">
                <img class="object-cover w-full h-full " src="<%= item.Image[0] %>" alt="" loading="lazy" />
                <div class="absolute inset-0 rounded-full shadow-inner" aria-hidden="true"></div>
              </div>
              <div>
                <p class="font-semibold text-black mb-2">Name: <%= item.Name %></p>
                <p class="text-xs text-gray-600 mb-2">
                  <%= item.Description %>
                </p>
              </div>
            </div>
            <div class="flex justify-between px-4 py-3">
              <div>
                <p class="text-sm mb-2">Brand</p>
                <p class="text-ms font-semibold mb-2">
                  <%= item.Brand %>
                </p>
              </div>
              <div>
                <p class="text-sm mb-2">Size</p>
                <p class="text-xs mb-2">
                  <span class="px-2 py-1 font-semibold leading-tight text-green-700 bg-green-100 rounded-sm">
                    <%= item.Size %>
                  </span>
                </p>
              </div>
              <div>
                <p class="text-sm mb-2">Price</p>
                <p class="text-sm mb-2">
                  â‚¹ <%=  item.Price %>
                </p>
              </div>
              <div >
               <a href="/cartpost/<%= item._id %>"><button class=" text-orange-400 ">Add to cart</button></a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <%}); %>
</body>
</html>